<h1><%= @course.name %></h1>
<p><%= @course.description %></p>
<p><%= @course.code %></p>
<p><%= number_to_currency(@course.price, unit: "R$", separator: ",", delimiter: "", format: "%u %n") %></p>
<% if @course.enrollment_deadline %>
  <p><%= @course.enrollment_deadline.strftime("%d/%m/%Y")%></p>
<% end %>
<%= link_to 'Editar', edit_course_path(@course) %>
<%= link_to 'Apagar', @course, method: :delete %>
<%= link_to 'Voltar', courses_path %>